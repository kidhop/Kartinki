<?xml version="1.0" encoding="utf-8"?>

<!--
Translation of the game-related texts.

language - this is the name of the language how it will be displayed/typed in the game
ThreeLetterISO - unique identifier of the language, please check them here:

For Three Letter ISO codes, see:
https://en.wikipedia.org/wiki/List_of_ISO_639-2_codes
-->

<game language="English" ThreeLetterISO="eng">
	<keys headline="Use these keys">
		<key id="F1" description="Open this help"/>
		<key id="Enter" description="Finished typing a word or number? Press Enter"/>
		<key id="Move" description="Move images"/>
		<key id="Scale" description="Make images bigger or smaller"/>
		<key id="Tab" description="Jump to another image"/>
		<key id="Delete" description="Remove an image"/>
		<key id="Esc" description="Show only your picture"/>
	</keys>
	<commands headline="Special words">
		<command id="New" name="New" description="Create a new picture"/>
		<command id="Open" name="Old" description="Open an old picture"/>
		<command id="SaveImage" name="Ready" description="Save the picture (as PNG) to share with friends"/>
		<command id="Level1" name="Level 1" description="Type a number for a color"/>
		<command id="Level2" name="Level 2" description="Add numbers for a color"/>
		<command id="Level3" name="Level 3" description="Add and Subtract numbers for a color"/>
	</commands>
	<texts>
		<welcome>This is a game.
You make a picture by writing words.
And color it by typing numbers.
		</welcome>
		<info headline="Also">Type a name of a language to use it.
Your pictures are always saved, no worries.
		</info>
		<play>Press to play:</play>
	</texts>
</game>